]

def get_fail_message():
    return random.choice(fail_messages)

pass_message = "Correct! Your IQ has increased."

def adjust_iq(correct, iq, game_state):
    if correct:
        iq += game_state.difficulty.iq_gain
    else:
        iq -= game_state.difficulty.iq_loss
    return iq

